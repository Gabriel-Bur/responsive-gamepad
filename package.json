{
  "name": "responsive-gamepad",
  "version": "0.1.0",
  "description": "Handle Keyboard, Gamepad, and Touch Controls under a single API",
  "main": "dist/responsive-gamepad.cjs.js",
  "module": "dist/responsive-gamepad.esm.js",
  "browser": "dist/responsive-gamepad.umd.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npx concurrently --kill-others --names \"DEMO,LIB\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run demo:watch\" \"npm run lib:watch\"",
    "demo": "if-env NODE_ENV=production && npm run -s demo:build:serve || npm run -s demo:watch",
    "demo:serve": "npm run demo:watch",
    "demo:watch": "preact watch",
    "demo:build": "preact build",
    "demo:build:serve": "npm run demo:build && preact serve --cwd docs",
    "demo:deploy": "npm run demo:build && npx gh-pages -d build",
    "lib:watch": "npx rollup -c -w",
    "lib:build": "npx rollup -c",
    "lib:deploy": "npm run lib:build && npx np",
    "test": "echo \"No tests specified\"",
    "lint": "eslint src"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torch2424/responsive-gamepad.git"
  },
  "keywords": [
    "gamepad",
    "game",
    "controller",
    "es6",
    "browser",
    "keyboard",
    "controls",
    "gaming",
    "touch",
    "mobile",
    "anroid",
    "ios"
  ],
  "author": "Aaron Turner",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/torch2424/responsive-gamepad/issues"
  },
  "homepage": "https://github.com/torch2424/responsive-gamepad#readme",
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "external-helpers"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "gh-pages": "^1.1.0",
    "if-env": "^1.0.0",
    "np": "^3.0.4",
    "preact": "^8.2.1",
    "preact-cli": "^2.0.0",
    "preact-compat": "^3.17.0",
    "promise-polyfill": "^7.1.0",
    "rollup": "^0.56.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-resolve": "^3.0.3"
  }
}
